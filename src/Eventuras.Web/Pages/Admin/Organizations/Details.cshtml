@page "{id:int}"
@model Eventuras.Web.Pages.Admin.Organizations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="bg-gray-200 py-3">
    <div class="container">
        <h1>@Model.Organization.Name</h1>
        <a asp-page="Delete" asp-route-id="@Model.Organization.OrganizationId" class="btn btn-danger link-decoration-none">Slett organisasjon</a>
    </div>
</div>

<div class="container py-5 min-height-66">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="Organization.OrganizationId" />
                <div class="form-group">
                    <label asp-for="Organization.Name" class="control-label"></label>
                    <input asp-for="Organization.Name" class="form-control" />
                    <span asp-validation-for="Organization.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.Description" class="control-label"></label>
                    <input asp-for="Organization.Description" class="form-control" />
                    <span asp-validation-for="Organization.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.ParentOrganizationId" class="control-label"></label>
                    <select asp-for="Organization.ParentOrganizationId" class="form-control"
                            asp-items="@(new SelectList(Model.ParentOrganizations,nameof(Organization.OrganizationId),nameof(Organization.Name)))">
                        <option></option>
                    </select>
                    <span asp-validation-for="Organization.ParentOrganizationId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.Url" class="control-label"></label>
                    <input asp-for="Organization.Url" class="form-control" />
                    <span asp-validation-for="Organization.Url" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.Phone" class="control-label"></label>
                    <input asp-for="Organization.Phone" class="form-control" />
                    <span asp-validation-for="Organization.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.Email" class="control-label"></label>
                    <input asp-for="Organization.Email" class="form-control" />
                    <span asp-validation-for="Organization.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.LogoUrl" class="control-label"></label>
                    <input asp-for="Organization.LogoUrl" class="form-control" />
                    <span asp-validation-for="Organization.LogoUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.LogoBase64" class="control-label"></label>
                    <input asp-for="Organization.LogoBase64" class="form-control" />
                    <span asp-validation-for="Organization.LogoBase64" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.VatId" class="control-label"></label>
                    <input asp-for="Organization.VatId" class="form-control" />
                    <span asp-validation-for="Organization.VatId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.AccountNumber" class="control-label"></label>
                    <input asp-for="Organization.AccountNumber" class="form-control" />
                    <span asp-validation-for="Organization.AccountNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Organization.EventurasHostname" class="control-label"></label>
                    <input asp-for="Organization.EventurasHostname" class="form-control" />
                    <span asp-validation-for="Organization.EventurasHostname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Oppdater" class="btn btn-success" />
                    <a asp-page="./Index" class="btn btn-secondary link-decoration-none">Avbryt</a>
                </div>
            </form>
        </div>
    </div>
</div>

