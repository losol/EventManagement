<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MoreInformation" class="control-label"></label>
                <input asp-for="Product.MoreInformation" class="form-control" />
                <span asp-validation-for="Product.MoreInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MinimumQuantity" class="control-label"></label>
                <input asp-for="Product.MinimumQuantity" class="form-control" />
                <span asp-validation-for="Product.MinimumQuantity" class="text-danger"></span>
